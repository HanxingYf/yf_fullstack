/* pages/index/index.wxss */
swiper{
  height: 421rpx;
}
.slide-image{
  height: 100%;
  width: 100%;
}
.selected-title{
  text-align: center;
  padding: 30px 0;
  color: #ab956d;
}
.selected-top,select-bottom{
  width: 100%;
  height: 375rpx;
  display: flex;
}
.selected-top__small{
  width: 375rpx;
  height: 100%;

}
.selected-top__small navigator,
.selected-top__small image,
select-bottom navigator
select-bottom image{
  width: 100%;
  height: 100%;
}

.newest-box{
  padding: 0 40rpx;
}
.newest-list{
  display: inline-block;
  width: 325rpx;
  height: 325rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 10px;
  background-color: #f5f6f5;
  text-align: center;
}
.newest-list image{
  width: 175rpx;
  height: 175rpx;
  margin: 20px 0 10px;
}
.newest-list:nth-child(2n){
  margin-right: 0;
}